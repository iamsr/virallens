# Development Dockerfile for Go backend
FROM golang:1.25-alpine

WORKDIR /app

# Install dependencies
RUN apk add --no-cache git make

# Copy go mod files
COPY go.mod go.sum ./
RUN go mod download

# Copy source code
COPY . .

EXPOSE 8080

# Run with go run for development
CMD ["go", "run", "cmd/server/main.go"]
